@model IEnumerable<CarInsuranceFinal.Models.Schema.Car>

<h2 class="text-center display-4 mb-4">Your Registered Cars</h2>

<div class="text-center mb-4">
    @if (ViewBag.HasReachedCarLimit)
    {
        <p class="text-danger">You have reached the maximum number of registered cars.</p>
    }
    else
    {
        <a asp-controller="Car" asp-action="Create" class="btn btn-warning btn-lg">Add New Car</a>
    }
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Model</th>
            <th>Year</th>
            <th>Registration Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.RegistrationNumber</td>
                <td>
                    <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>

                    <!-- Delete Button to Trigger Modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@car.Id">
                        Delete
                    </button>

                    <!-- Modal for each Car -->
                    <div class="modal fade" id="deleteModal-@car.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@car.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-dark" id="deleteModalLabel-@car.Id">Delete Car</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-dark">
                                    Are you sure you want to delete this car?
                                    <br />
                                    Model: @car.Model
                                    <br />
                                    Year: @car.Year
                                    <br />
                                    Registration Number: @car.RegistrationNumber
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@car.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
